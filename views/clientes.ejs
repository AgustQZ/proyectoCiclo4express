    <tbody>
      <% if (arrayClientes.length> 0) { %>
        <% arrayClientes.forEach(cliente=> { %>
          <tr>
            <th scope="row"><%= cliente.id %> </th>
            <td><%= cliente.nombre %></td>
            <td><%= cliente.apellido%></td>
            <td><%= cliente.cel %></td>
            <td>Boton</td>
          </tr>
            <% }) %>
                <% } %>
      
